class Solution {
    public int distanceBetweenBusStops(int[] distance, int start, int destination) {
        int l=distance.length;
        int d=0;
        int temp=0;
        if(start>destination){
            temp=start;
            start=destination;
            destination=temp;;
        }
        for(int i=0;i<l;i++){
            d+=distance[i];
        }
        int d1=0;
        for(int i=start;i<destination;i++){
            d1+=distance[i];
        }
        return d1>(d-d1)?d-d1:d1;
    }
}