class Solution {
    public String toGoatLatin(String sentence) {
        StringBuilder sb=new StringBuilder();
        int c=1;
        int l=sentence.length();
        boolean fl=true;
        char cha=sentence.charAt(0);
        if(cha=='a' || cha=='e' || cha=='i' || cha=='o' || cha=='u' || cha=='A'|| cha=='E' || cha=='I' || cha=='O' || cha=='U'){
            sb.append(cha);
            fl=false;
        }
        for(int i=1;i<l;i++){
            char ch=sentence.charAt(i);
            if(ch==' '){
                if(fl){
                    sb.append(cha);
                    fl=false;
                }
                sb.append("ma");
                for(int j=0;j<c;j++){
                    sb.append('a');
                }
                c++;
            }
            
            if((i==0 || sentence.charAt(i-1)==' ') && (ch!='a' && ch!='e' && ch!='i' && ch!='o' && ch!='u' && ch!='A' && ch!='E' && ch!='I' && ch!='O' && ch!='U')){
                fl=true;
                cha=ch;
            }
            else{
                sb.append(ch);
            }
            
        }
        if(fl){
            sb.append(cha);
        }
        sb.append("ma");
        for(int j=0;j<c;j++){
            sb.append('a');
        }
        return sb.toString();
    }
}