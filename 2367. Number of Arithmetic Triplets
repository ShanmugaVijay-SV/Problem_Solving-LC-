class Solution {
    public int arithmeticTriplets(int[] nums, int diff) {
        int l=nums.length;
        int c=0;
        Set<Integer> s=new HashSet<>();
        for(int i=0;i<l;i++){
            int a=nums[i]-diff;
            if(s.contains(a) && (s.contains(a-diff))) c++;
            s.add(nums[i]);
        }
        return c;
    }
}