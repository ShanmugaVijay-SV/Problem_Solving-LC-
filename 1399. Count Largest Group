class Solution {
    int digSum(int n){
        int m=0;
        for(int num=n;num!=0;num/=10){
            m+=num%10;
        }
        return m;
    }
    public int countLargestGroup(int n) {
        int arr[] = new int[37];
        for(int i=1;i<=n;i++){
            arr[digSum(i)]++;
        }
        int max=0;
        for(int num:arr){
            if(num>max) max=num;
        }
        int count=0;
        for(int num:arr){
            if(num==max) count++;
        }
        return count;
    }
}

