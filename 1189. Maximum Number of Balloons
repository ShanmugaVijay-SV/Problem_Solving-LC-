class Solution {
    public int maxNumberOfBalloons(String text) {
        int le=text.length();
        int arr[]=new int[7];
        boolean l=false;
        boolean o=false;
        for(char ch:text.toCharArray()){
            if(ch=='b'){
                arr[0]++;
            }
            else if(ch=='a'){
                arr[1]++;
            }
            else if(ch=='l' && l){
                arr[2]++;
                l=false;
            }
            else if(ch=='l'){
                arr[3]++;
                l=true;
            }
            else if(ch=='o' && o){
                arr[4]++;
                o=false;
            }
            else if(ch=='o'){
                arr[5]++;
                o=true;
            }
            else if(ch=='n'){
                arr[6]++;
            }
        }
        int min=le;
        for(int i=0;i<7;i++){
            if(arr[i]<min){
                min=arr[i];
            }
        }
        return min;
    }
}