class Solution {
    public String sortSentence(String s) {
        String arr[]=s.split(" ");
        int l=arr.length;
        String arr1[]=new String[l];
        for(String str:arr){
            int len=str.length();
            int num=str.charAt(str.length()-1)-'0';
            arr1[num-1]=str.substring(0,len-1);
        }
        StringBuilder sb = new StringBuilder();
        for (int i = 0; i < l; i++) {
            sb.append(arr1[i]);
            if (i < l - 1) sb.append(" ");
        }
        return sb.toString();
    }
}