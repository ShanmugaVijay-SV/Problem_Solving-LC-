class Solution {
    public int minCharacters(String a, String b) {
        int la=a.length();
        int lb=b.length();
        int[] ca=new int[26];
        int[] cb=new int[26];
        for(int i=0;i<la;i++){
            ca[a.charAt(i)-'a']++;
        }
        for(int i=0;i<lb;i++){
            cb[b.charAt(i)-'a']++;
        }

        int ans=Integer.MAX_VALUE;
        for(int i=0;i<26;i++){
            ans=Math.min(ans,la-ca[i]+lb-cb[i]);
        }

        int cca=0;
        int ccb=0;
        for(int i=0;i<25;i++){
            cca+=ca[i];
            ccb+=cb[i];
            ans=Math.min(ans,la-cca+ccb);
            ans=Math.min(ans,lb-ccb+cca);
        }
        return ans;
    }
}