class Solution {
    public char kthCharacter(int k) {
        int div=1;
        while(k-div>=0){
            div=div*2;
        }
        div=div/2;
        int c=0;
        while(k!=1){
            while(k-div<=0){
                div=div/2;
            }
            k=k-div;
            c++;
        }
        return (char)('a'+c);
    }
}

------------------------------------------Example--------------------------------------
2^0=1
2^1=2
2^2=4
2^3=8
2^4=16

if k=13
13-8=5      ->1
5-4=1       ->2
1           ->3 steps

'a'+3='c'