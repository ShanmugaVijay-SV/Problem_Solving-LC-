/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public void fun(TreeNode rt,Queue<TreeNode> q,List<Double> lst){
        while(!q.isEmpty()){
            int l=q.size();
            double s=0;
            for(int i=0;i<l;i++){
                TreeNode r=q.poll();
                if(r.left!=null)
                    q.add(r.left);
                if(r.right!=null)
                    q.add(r.right);
                s+=r.val;
                
            }
            lst.add((double)s/(double)l);
        }
    }
    public List<Double> averageOfLevels(TreeNode root) {
        Queue<TreeNode> q=new LinkedList<>();
        List<Double> lst=new ArrayList<>();
        q.add(root);
        fun(root,q,lst);
        return lst;
    }
}