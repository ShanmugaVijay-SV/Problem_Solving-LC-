class Solution {
    public int[] arrayRankTransform(int[] arr) {
        int l=arr.length;
        int arr1[]=Arrays.copyOf(arr,l);
        int arr2[]=new int[l];
        Arrays.sort(arr1);
        int c=0;
        // Set<Integer> s=new HashSet<>();
        HashMap<Integer,Integer> hm=new HashMap<>();
        for(int i=0;i<l;i++){
            if(!hm.containsKey(arr1[i])){
                hm.put(arr1[i],i+1+c);
                // s.add(arr1[i]);
            }
            else{
                c--;
            }
        }
        for(int i=0;i<l;i++){
            arr2[i]=hm.get(arr[i]);
        }
    return arr2;

    }
}